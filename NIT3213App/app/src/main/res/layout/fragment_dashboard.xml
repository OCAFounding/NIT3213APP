<?xml version="1.0" encoding="utf-8"?>
<!--
    fragment_dashboard.xml - Dashboard Screen Layout
    
    This layout provides the user interface for the dashboard screen.
    It displays the total count and a list of entities in a RecyclerView.
    
    Key Concepts:
    - LinearLayout for vertical arrangement
    - TextView for total count display
    - RecyclerView for entity list
    - ProgressBar for loading state
    - TextView for error messages
    
    Assignment Requirements:
    - Shows total entity count
    - Displays entity list in RecyclerView
    - Loading state indication
    - Error message display
    - Clean, organized layout
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!--
        TOTAL COUNT
        TextView showing the total number of entities
    -->
    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total: 0"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSurface" />

    <!--
        LOADING INDICATOR
        ProgressBar shown during data loading
    -->
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

    <!--
        ERROR MESSAGE
        TextView for displaying error messages
    -->
    <TextView
        android:id="@+id/tvError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:visibility="gone" />

    <!--
        ENTITY LIST
        RecyclerView displaying the list of entities
    -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp" />

</LinearLayout>
